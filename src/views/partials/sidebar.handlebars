<!-- Barra lateral izquierda -->
<div id="sidebar" class="fixed inset-y-0 left-0 w-64 bg-blue-800 text-white shadow-lg transition-transform duration-300 transform z-30">
  <div class="p-4 border-b border-blue-700 flex justify-between items-center">
    <div>
      <h2 class="text-xl font-bold">ThreeDocs</h2>
      <p class="text-sm text-blue-300">Sistema de Gestión Documental</p>
    </div>
    <button id="toggle-sidebar" class="text-white">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
  
  <div class="py-4">
    <div class="px-4 mb-2">
      <p class="text-blue-300 text-xs uppercase font-bold tracking-wider">Menú Principal</p>
    </div>
    
    <a href="/dashboard" class="block px-4 py-2 text-white hover:bg-blue-700 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" />
      </svg>
      Tablero de Control
    </a>
    
    <a href="#" id="upload-link" class="block px-4 py-2 text-white hover:bg-blue-700 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      Subir Documentos
    </a>
    
    <a href="/properties" class="block px-4 py-2 text-white hover:bg-blue-700 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
      </svg>
      Gestión de Predios
    </a>
    
    <a href="/galery" class="block px-4 py-2 text-white hover:bg-blue-700 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
      </svg>
      Galería de Documentos
    </a>
    
    <div class="px-4 my-4 border-t border-blue-700"></div>
    
    <div class="px-4 mb-2">
      <p class="text-blue-300 text-xs uppercase font-bold tracking-wider">Documentación</p>
    </div>
    
    <div id="document-tree" class="px-4">
      <!-- Árbol de carpetas -->
      <div class="mb-2">
        <div class="flex items-center cursor-pointer hover:text-blue-300" onclick="toggleFolder('folder1')">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path id="folder1-icon" d="M9 5l7 7-7 7" />
          </svg>
          <span>Documentos Forestales</span>
        </div>
        <div id="folder1-content" class="pl-6 mt-1 hidden">
          <div class="py-1 hover:text-blue-300 cursor-pointer">Plan de Manejo</div>
          <div class="py-1 hover:text-blue-300 cursor-pointer">Certificados</div>
          <div class="py-1 hover:text-blue-300 cursor-pointer">Informes Técnicos</div>
        </div>
      </div>
      
      <div class="mb-2">
        <div class="flex items-center cursor-pointer hover:text-blue-300" onclick="toggleFolder('folder2')">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path id="folder2-icon" d="M9 5l7 7-7 7" />
          </svg>
          <span>Documentos Legales</span>
        </div>
        <div id="folder2-content" class="pl-6 mt-1 hidden">
          <div class="py-1 hover:text-blue-300 cursor-pointer">Escrituras</div>
          <div class="py-1 hover:text-blue-300 cursor-pointer">Contratos</div>
          <div class="py-1 hover:text-blue-300 cursor-pointer">Permisos</div>
        </div>
      </div>
    </div>
    
    <div class="px-4 mt-6 mb-2">
      <p class="text-blue-300 text-xs uppercase font-bold tracking-wider">Usuario</p>
    </div>
    
    <a href="#" id="logout-btn" class="block px-4 py-2 text-white hover:bg-blue-700 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V4a1 1 0 00-1-1H3zm11 4a1 1 0 10-2 0v4.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L14 11.586V7z" clip-rule="evenodd" />
      </svg>
      Cerrar Sesión
    </a>
  </div>
</div>

<!-- Botón para mostrar sidebar en móviles -->
<div id="show-sidebar-btn" class="fixed top-4 left-4 bg-blue-800 text-white p-2 rounded-lg shadow-lg cursor-pointer hidden z-40">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
</div>