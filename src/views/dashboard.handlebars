{{!< layouts/main }}
<!-- Main Content for Dashboard -->
<div class="p-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl font-bold text-gray-800">Dashboard de Predios</h1>
        <div class="flex items-center space-x-4">
            <span class="text-gray-600">Bienvenido, {{user.email}}</span>
            <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white">
                <i class="fas fa-user"></i>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Properties Card -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Predios Registrados</p>
                    <h3 id="predios-registrados-count" class="text-2xl font-bold text-gray-800">0</h3>
                </div>
                <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                    <i class="fas fa-map-marked-alt text-xl"></i>
                </div>
            </div>
            <div class="mt-4">
                <span id="predios-registrados-stat" class="text-green-500 text-sm font-medium"></span>
            </div>
        </div>

        <!-- Active Properties Card -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Predios Activos</p>
                    <h3 id="predios-activos-count" class="text-2xl font-bold text-gray-800">0</h3>
                </div>
                <div class="p-3 rounded-full bg-green-100 text-green-600">
                    <i class="fas fa-check-circle text-xl"></i>
                </div>
            </div>
            <div class="mt-4">
                <span id="predios-activos-stat" class="text-green-500 text-sm font-medium"></span>
            </div>
        </div>

        <!-- Documents Card -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Documentos Subidos</p>
                    <h3 id="documentos-subidos-count" class="text-2xl font-bold text-gray-800">0</h3>
                </div>
                <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                    <i class="fas fa-file-alt text-xl"></i>
                </div>
            </div>
            <div class="mt-4">
                <span id="documentos-subidos-stat" class="text-green-500 text-sm font-medium"></span>
            </div>
        </div>

        <!-- Completion Card -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-gray-500 text-sm">Cumplimiento Documental</p>
                    <h3 id="cumplimiento-documental-percentage" class="text-2xl font-bold text-gray-800">0%</h3>
                </div>
                <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                    <i class="fas fa-clipboard-check text-xl"></i>
                </div>
            </div>
            <div class="mt-4">
                <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div id="cumplimiento-documental-bar" class="bg-yellow-500 h-2.5 rounded-full" style="width: 0%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity and Document Progress -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Activity -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-semibold text-gray-800">Historial de Cambios</h2>
                <a href="/history" class="text-sm text-blue-500 hover:underline">Ver todo</a>
            </div>
            <div id="historial-lista" class="space-y-4">
                <!-- Activity items will be loaded here by JavaScript -->
            </div>
        </div>

        <!-- Document Progress -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Progreso Documental por Predio</h2>
            <div id="progreso-documental-lista" class="space-y-4">
                <!-- Progress items will be loaded here by JavaScript -->
            </div>
            <div class="mt-4 text-center">
                <a href="/properties" class="text-sm text-blue-500 hover:underline">Ver todos los predios</a>
            </div>
        </div>
    </div>
</div>
<!-- Modal shown while dashboard data is loading -->
<div id="dashboard-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white rounded-lg shadow-lg p-6 text-center">
        <div class="mb-4">
            <i class="fas fa-spinner fa-spin text-2xl text-gray-700"></i>
        </div>
        <p class="text-lg text-gray-800 font-medium">Cargando dashboard...</p>
    </div>
</div>


<!-- Incluir el archivo JavaScript del dashboard -->
<script src="/js/dashboard.js"></script>
